<resources>
    <style name="AddButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:src">@drawable/ic_add</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SectionTitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#333333</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="CardItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/card_bg</item>
    </style>
</resources>
